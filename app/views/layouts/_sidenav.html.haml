#sidenav-collapse-main.collapse.navbar-collapse
  %form.mt-4.mb-3.d-md-none
    .input-group.input-group-rounded.input-group-merge
      %input.form-control.form-control-rounded.form-control-prepended{"aria-label" => "Search", placeholder: "Search", type: "search"}/
      .input-group-prepend
        .input-group-text
          %span.fa.fa-search
  %ul.navbar-nav
    %li.nav-item.active
      %a.nav-link.active
        %i.ni.ni-tv-2.text-primary
        Dashboard
    - if policy([:user, :admin, User]).index?
      %li.nav-item
        = link_to user_admin_users_path, class: 'nav-link' do
          %i.menu-icon.tf-icons.bx.bx-award
          Usuário
    - if policy([:user, :admin, Office]).index?
      %li.nav-item
        = link_to user_admin_offices_path, class: 'nav-link' do
          %i.fa-solid.fa-users.fs-6.me-2
          Cargos

    %hr.separator
    %li.nav-item
      = link_to user_common_notifications_path, class: 'nav-link' do
        %i.ni.ni-single-02.text-yellow
        Notificação
        .span.badge.badge-light.text-danger
          = Notification.where(user: current_user, read_confirmation: false).size
    %li.nav-item
      = link_to destroy_user_session_path, :method => :get, class: 'nav-link' do
        %i.ni.ni-bullet-list-67.text-red
        Sair
